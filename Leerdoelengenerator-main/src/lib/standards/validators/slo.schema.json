{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "sectors", "leergebied", "kernzin", "subdoelen", "status", "bron"],
    "properties": {
      "id": { "type": "string" },
      "sectors": {
        "type": "array",
        "items": { "type": "string" }
      },
      "leergebied": { "type": "string" },
      "kernzin": { "type": "string" },
      "subdoelen": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["code", "tekst"],
          "properties": {
            "code": { "type": "string" },
            "tekst": { "type": "string" }
          }
        }
      },
      "toelichting": { "type": "string" },
      "status": { "const": "definitieve_concepten_2025" },
      "bron": {
        "type": "object",
        "required": ["doc", "ref"],
        "properties": {
          "doc": { "const": "SLO-2025" },
          "ref": { "type": "string" }
        }
      }
    }
  }
}
